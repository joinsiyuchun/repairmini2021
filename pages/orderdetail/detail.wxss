page {
  background-color: #d8d8d8;
}

.card {
  width: 751rpx;
  height: 211rpx;
  background-color: #4a90e2;
}

.card-title {
 font-size: 44rpx;
line-height: 60rpx;
color: #ffffff;
text-align: center;
margin-bottom: 20rpx;
}

.card-content {
  flex: 1;
  margin-left: 50rpx;
}

.card-info {
  font-size: 33rpx;
  font-weight: lighter;
  line-height: 45rpx;
  color: #ffffff;
}

.card-comment {
  color: #93afdb;
  font-weight: 600;
  margin-top: 8rpx;
}

.card-tips {
  color: #a2a1a0;
  margin: 10rpx 0 20rpx;
  font-size: 24rpx;
}

.order {
  background: white;
  margin-top: 20rpx;
}

.order-title {
  font-size: 32rpx;
  color: #a2a1a0;
  padding: 24rpx;
  border-bottom: 1rpx #e3e3e3 solid;
}

.order-list {
  padding: 0 30rpx;
}

.order-item {
  background: #fff;
  display: flex;
  font-size: 32rpx;
  padding: 25rpx 0;
  border-top: 1rpx #e3e3e3 solid;
}

.order-item-l {
  flex: 1;
  display: flex;
}

.order-item-image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 25rpx;
}

.order-item-number {
  color: #a3a3a3;
  margin-top: 4rpx;
  font-size: 28rpx;
}

.order-promotion-icon {
  display: inline-block;
  background: #ff4500;
  padding: 2rpx 6rpx 6rpx;
  color: #fff;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.order-promotion-price {
  color: #ff4500;
}

.order-total-price {
  font-size: 40rpx;
}

.list {
  background: #fff;
  margin-top: 2rpx;
}

.list > view {
  font-size: 30rpx;
  color: #d1d1d1;
  padding: 20rpx;
  border-bottom: 1rpx #e3e3e3 solid;
  display: flex;
}

.list > view > view {
  color: black;
  margin-left: 20rpx;
}

.tips {
  width: 80%;
  text-align: center;
  margin: 20rpx auto 40rpx;
  padding: 12rpx 20rpx;
  background: #93afdb;
  color: #fff;
  font-size: 36rpx;
}

/* 步骤条 */
.steps_box{
  padding: 0rpx 0rpx;
  margin: 0rpx 0rpx;
  width: 100%;
  background-color: white;
  height: 200rpx;
  position:relative;
}
.progress{
  margin-left: 62rpx;
  margin-top: 75rpx;
  position:absolute;
}
.steps_all{
  width: 100%;
  position: absolute;
  top: 50rpx;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}
.steps_one_box{
  height: 100%;
  width: 25%;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.steps2{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #fff;
  text-align: center;
  border: 1rpx solid #4a90e2;
  color:#4a90e2;
}
.steps_img{
  margin-top:5rpx;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.steps{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background-color: #4a90e2;
  text-align: center;
  color:#fff;
}
.steps3{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background-color:  #e3e3e3;
  text-align: center;
  color:#7a7979;
}
.steps_wenzi{
  font-size: 30rpx;
  line-height: 75rpx;
  color: #000000;
  font-family: PingFangSC-Light;
}
