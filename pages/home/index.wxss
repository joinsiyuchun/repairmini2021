.bg{
    width: 100%;
    min-height: 810rpx;
    background-color: #4a90e2;
    display: flex;
    flex-direction: column;
    align-items: center;
}


.top {
  width: 90%;
  display: flex;
  padding: 20rpx;
  flex-direction: row;
  background-color: #FFFFFF;
  position: relative;
  border-radius: 8rpx;
  margin-bottom:80rpx;
}

.top > input {
  width: 80%;
  font-size: 32rpx;
}

.top > icon {
  width: 10%;
  position: absolute;
  right: 0;
}

.circle > image{
  width: 482rpx;
  height: 450rpx;
}

.order{
    width: 90%;
    display: flex;
    flex-direction: row;
    border-radius: 24rpx;
    text-align: center;
    align-items: center;
    position: absolute;
    top:680rpx;
    margin-left: 5%;
}
.box{
    background-color: #ffffff;
    width: 30%;
     height: 200rpx;
